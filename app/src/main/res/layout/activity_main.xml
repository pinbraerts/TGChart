<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            app:title="Statistics"
            app:titleTextColor="@color/text"/>

    <TextView
            android:text="Followers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="@color/accent"
            android:textSize="18sp" android:padding="16dp" android:paddingBottom="0dp"/>

    <did.pinbraerts.tgchart.Chart
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingLeft="16dp" android:paddingRight="16dp"
            android:id="@+id/chart"/>
    <ListView
            android:id="@+id/columns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    />

</LinearLayout>